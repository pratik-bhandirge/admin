<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="maq_product_template_inherit_form" model="ir.ui.view">
            <field name="name">maq.product.template.inherit.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page string="Shopify" groups="shopify_connector.group_shopify_admin,shopify_connector.group_shopify_manager,shopify_connector.group_shopify_user">
                        <group>
                            <field name="shopify_product_template_ids" nolabel="1">
                                <tree delete="false">
                                    <field name="product_tmpl_id"/>
                                    <field name="vendor"/>
                                    <field name="product_type"/>
                                    <field name="shopify_config_id"/>
                                    <field name="shopify_prod_tmpl_id"/>
                                    <button name="export_shopify" string="Export" type="object" attrs="{'invisible': [('shopify_prod_tmpl_id','!=',False)]}"/>
                                    <!-- <button class="oe_stat_button" name="website_publish_button"
                                    type="object" string="Publish" attrs="{'invisible': ['|',('shopify_prod_tmpl_id','in', [False]),('shopify_published','=',True)]}">
                                          <field name="shopify_published" widget="boolean_toggle"/>
                                    </button>
                                    <button class="oe_stat_button" name="website_unpublish_button"
                                    type="object" string="Unpublish" attrs="{'invisible': ['|',('shopify_prod_tmpl_id','in', [False]),('shopify_published','=',False)]}">
                                        <field name="shopify_published" widget="boolean_toggle"/>
                                    </button> -->
                                    <button name="update_shopify_product" string="Update" type="object" attrs="{'invisible': [('shopify_prod_tmpl_id','=',False)]}"/>
                                </tree>
                                <form>
                                    <group>
                                        <!-- <button class="oe_stat_button" name="website_publish_button"
                                    type="object" icon="fa-globe">
                                            <field name="website_published" widget="website_button"/>
                                            <field name="shopify_published" widget="website_button"/>
                                    </button> -->
                                        <group>
                                            <!-- <field name="product_tmpl_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" attrs="{'readonly': [('shopify_prod_tmpl_id','!=',False)]}"/> -->
                                            <!-- <field name="name" attrs="{'readonly': [('shopify_prod_tmpl_id','!=',False)]}"/> -->
                                            <field name="shopify_config_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" attrs="{'readonly': [('shopify_prod_tmpl_id','!=',False)]}"/>
                                            <field name="meta_fields_ids" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" widget="many2many_tags"/>
                                        </group>
                                        <group>
                                            <field name="vendor" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                            <field name="product_type" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                            <field name="shopify_published"/>
                                        </group>
                                        <group>
                                            <field name="shopify_prod_tmpl_id"/>
                                        </group>
                                        <group>
                                            <field name="shopify_error_log"/>
                                        </group>
                                    </group>
                                    <notebook>
                                        <page string="Body Html" invisible="0">
                                            <field name="body_html" nolabel="1"/>
                                        </page>
                                        <page string="Images" invisible="1">
                                            <field name="image_ids"/>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </group>
                        <group>
                             <field name="prod_tags_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                             <field name="province_tags_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                             <field name="allowed_variants_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                             <!-- <field name="prod_tmpl_id"/> -->
                        </group>
                    </page>
                </xpath>
                <!-- <xpath expr="/form/sheet/div[@class='oe_title']/div[@name='options']" position="inside">
                    <div>
                        <field name="published_on_shopify"/>
                        <label for="published_on_shopify"/>
                    </div>
                </xpath> -->
            </field>
        </record>

        <record id="maq_product_product_shopify_fields_inherit_form" model="ir.ui.view">
            <field name="name">maq.product.product.shopify.fields.inherit.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[last()]" position="after">
                   <page string="Shopify Variant fields" groups="shopify_connector.group_shopify_admin,shopify_connector.group_shopify_manager,shopify_connector.group_shopify_user">
                        <group>
                            <field name="shopify_shipping_product" attrs="{'invisible': [('type','!=','service')]}"/>
                            <field name="shopify_discount_product" attrs="{'invisible': [('type','!=','service')]}"/>
                        </group>
                        <group>
                            <field name="shopify_product_product_ids" nolabel="1">
                                <tree delete="false">
                                    <field name="product_variant_id"/>
                                    <!-- <field name="default_code"/> -->
                                    <field name="shopify_product_template_id"/>
                                    <field name="shopify_product_id"/>
                                    <field name="shopify_inventory_item_id"/>
                                    <field name="shopify_config_id"/>
                                    <field name="product_template_id"/>
                                    <button name="export_shopify_variant" string="Export Variant" type="object" attrs="{'invisible': [('shopify_product_id','!=',False)]}"/>
                                    <button name="update_shopify_variant" string="Update Variant" type="object" attrs="{'invisible': [('shopify_product_id','=',False)]}"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="shopify_config_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" attrs="{'readonly': [('shopify_product_id','!=',False)]}"/>
                                            <!-- <field name="product_id"/> -->
                                            <field name="product_template_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" readonly="1"/>
                                            <field name="meta_fields_ids" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" widget="many2many_tags"/>
                                        </group>
                                        <group>
                                            <field name="lst_price"/>
                                            <field name="product_variant_id" required="0" readonly="1" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" attrs="{'readonly': [('product_template_id','in', ('', False))]}"/>
                                            <field name="shopify_published_variant" invisible="1"/>
                                        </group>
                                    </group>
                                    <group>
                                        <group>
                                            <field name="shopify_product_template_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                            <field name="shopify_inventory_item_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                        </group>
                                        <group>
                                            <field name="shopify_product_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                        </group>
                                    </group>
                                    <!-- <group>
                                        <group>
                                            <field name="shopify_weight" readonly="1"/>
                                        </group>
                                        <group>
                                            <field name="shopify_uom" readonly="1" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                        </group>
                                    </group> -->
                                </form>
                            </field>
                        </group>
                        <!-- <group>
                            <field name="shopify_weight"/>
                            <field name="shopify_uom" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                        </group> -->
                    </page>
                </xpath>
            </field>
        </record>

        <record id="product_product_shopify_search_view" model="ir.ui.view">
            <field name="name">product.product.shopify.search.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='activities_upcoming_all']" position="after">
                    <filter name="shopify_published_variant" string="Shopify Published" domain="[('shopify_product_product_ids','!=',False)]"/>
                </xpath>
            </field>
        </record>

        <record id="product_template_shopify_search_view" model="ir.ui.view">
            <field name="name">product.template.shopify.search.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='consumable']" position="after">
                    <filter name="shopify_published_template" string="Shopify Published Template" domain="[('shopify_product_template_ids','!=',False)]"/>
                </xpath>
            </field>
        </record>

        <record id="maq_product_product_shopify_action" model="ir.actions.act_window">
            <field name="name">Product Variants</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="shopify_connector.product_product_shopify_search_view"/>
            <field name="context">{'search_default_shopify_published_variant':1}</field>
        </record>

        <record id="maq_product_template_shopify_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">product.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_shopify_published_template':1}</field>
        </record>
    </data>
</odoo>
