<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_shopify_config_form" model='ir.ui.view'>
            <field name="name">view.shopify.config.form</field>
            <field name="model">shopify.config</field>
            <field name="arch" type="xml">
                <form name="shopify_config">
                    <header>
                        <button name="check_connection" type="object"
                            class="oe_highlight" string="Check Connection"/>
                        <button name="export_products_to_shopify" type="object"
                            class="oe_highlight" string="Export Products"/>
                        <button name="test_import_orders" type="object" 
                            class="oe_highlight" string="Import Orders"/>
                        <!--  <button name="test_import_locations" type="object"
                            class="oe_highlight" string="Import Location"/> -->
                        <button name="export_new_shopify_variants" type="object"
                            class="oe_highlight" string="Export New Shopify Variants"/>
                        <button name="reset_to_draft" type="object"
                            class="oe_highlight" string="Set to Draft" attrs="{'invisible': [('state','=','draft')]}" confirm="Are you sure you want to set to draft?"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,success,fail"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline" attrs="{'readonly': [('state','=','success')]}"/>
                        </h1>
                        <group name="shopify_credentials" string="Shopify Credentials">
                            <group colspan="4" col="4">
                                <field name="shop_url" colspan="4"
                                    placeholder="e.g. https://%s:%s@my-shop.myshopify.com/admin" attrs="{'readonly': [('state','=','success')]}"/>
                                <field name="api_key" colspan="2" attrs="{'readonly': [('state','=','success')]}"/>
                                <field name="password" password="1" colspan="2" attrs="{'readonly': [('state','=','success')]}"/>
                            </group>
                        </group>
                        <group name="company_access" string="Company Access Level">
                            <group colspan="4" col="4">
                                <field name="default_company_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" attrs="{'readonly': [('state','=','success')]}"/>
                                <field name="company_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" attrs="{'readonly': [('state','=','success')]}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_shopify_config_tree" model="ir.ui.view">
            <field name="name">view.shopify.config.tree</field>
            <field name="model">shopify.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="company_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="view_shopify_config_search" model="ir.ui.view">
            <field name="name">view.shopify.config.search</field>
            <field name="model">shopify.config</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="company_ids"/>
                    <field name="shop_url"/>
                    <field name="api_key"/>
                    <field name="password"/>
                    <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                    <filter name="success" string="Success" domain="[('state','=','success')]"/>
                    <filter name="fail" string="Fail" domain="[('state','=','fail')]"/>
                    <group string="Group By">
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_shopify_config" model="ir.actions.act_window">
            <field name="name">Shopify Configuration</field>
            <field name="res_model">shopify.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="shopify_connector.view_shopify_config_search"/>
        </record>
    </data>
</odoo>
